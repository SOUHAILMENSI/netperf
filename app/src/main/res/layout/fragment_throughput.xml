<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ThroughputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_margin="7dp">


            <!--
            https://bouygues.testdebit.info/50M/50M.iso
            https://bouygues.testdebit.info/100M/100M.iso

             -->
            <EditText
                android:id="@+id/edit_Tv"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Enter Url"
                android:text="https://bouygues.testdebit.info/50M/50M.iso"
                android:textSize="12dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="7dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="1dp"
            android:layout_weight="1">

            <!--  Download Zip File Layout  -->
            <Button
                android:id="@+id/download"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/download"
                android:textSize="16dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/save"
                android:textSize="16dp"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="10">

            <TextView
                android:id="@+id/tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16dp" />

        </ScrollView>

    </LinearLayout>

</FrameLayout>